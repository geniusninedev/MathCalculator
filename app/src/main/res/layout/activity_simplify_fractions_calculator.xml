<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simplify_fractions_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.geniusnine.android.mathcalculators.FractionCalculator.SimplifyFractionsCalculator">
    <LinearLayout
       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Simplify Fractions Calculator"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <EditText
            android:background="@android:drawable/editbox_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"

            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="1st Value"
            android:id="@+id/editTextSimplifyOne"
            android:layout_weight="1" />


        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"

        android:layout_marginTop="50dp"
            android:gravity="center"
       android:background="@android:drawable/editbox_background"
        android:hint="2nd Value"
        android:id="@+id/editTextSimplifyTwo"
        android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:background="@android:drawable/editbox_background"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
           android:gravity="center"
            android:layout_marginTop="90dp"

            android:hint="3rd Value"
            android:id="@+id/editTextSimplifyThird"
            android:layout_weight="1" />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="100dp"
    android:id="@+id/linearLayout">





</LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <EditText
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:layout_marginLeft="372dp"
            android:weightSum="1"
            android:visibility="invisible"
            android:id="@+id/editTextAnswerFirst" />
        <TextView
            android:textColor="#000000"
            android:visibility="invisible"
            android:layout_marginLeft="380dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswerSecond"
            android:textSize="20dp"

            android:weightSum="1"
            android:layout_weight="0.22" />


    </LinearLayout>

    <TextView
        android:textColor="#000000"
        android:visibility="invisible"
    android:layout_marginTop="290dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAnswerResult"
        android:textSize="20dp"
android:gravity="center"
        android:weightSum="1"
        android:layout_weight="0.22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutvalues"
        android:id="@+id/adviews"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="168dp"
        android:weightSum="2">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewsimplyfraction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"

            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
    <LinearLayout
         android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="220dp">

        <Button
            android:text="Calculate"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_weight="1"
            android:windowSoftInputMode="stateHidden"
            android:id="@+id/buttonCalci"
            android:textSize="16dp" />

        <Button
            android:text="Clear"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonReset"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>